{
    "name": "scoala21",
    "version": "1.0.0",
    "description": "Scoala Gimnaziala nr. 21 'Vicentiu Babes', Timisoara - site-ul scolii",
    "repository": {
        "type": "git",
        "url": "https://github.com/lmaran/scoala21.git"
    },
    "main": "app.js",
    "scripts": {
        "start": "run-s build watch",
        "build": "run-s clean build-tsc copy",
        "build-prod": "run-s clean build-tsc-prod copy",
        "build-tsc": "tsc -p tsconfig.dev.json",
        "build-tsc-prod": "tsc -p tsconfig.prod.json",
        "copy": "run-p copy-*",
        "copy-files": "cpx \"src/**/*.{json,js,hbs}\" dist/src",
        "copy-pub": "cpx \"src/public/**/*.*\" dist/src/public",
        "watch": "run-p watch-*",
        "watch-tsc": "tsc -p tsconfig.dev.json --watch",
        "watch-files": "cpx \"src/**/*.{json,js,hbs}\" dist/src --watch --no-initial --verbose",
        "watch-pub": "cpx \"src/public/**/*.*\" dist/src/public --watch --no-initial --verbose",
        "watch-dist": "nodemon --config nodemon.json",
        "lint": "tslint 'src/**/*.ts' -c tslint.json --format stylish --force",
        "clean": "rimraf dist"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cycle": "^1.0.3",
        "express": "^4.16.4",
        "express-handlebars": "^3.0.0",
        "mongodb": "^3.1.10",
        "rollbar": "^2.5.1",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@types/express": "^4.16.0",
        "@types/node": "^10.12.18",
        "browser-sync": "^2.26.3",
        "cpx": "^1.5.0",
        "nodemon": "^1.18.9",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.15.3",
        "rimraf": "^2.6.2",
        "typescript": "^3.2.2"
    }
}
