<div class="subject-container" data-subject-id="{{subject.id}}" data-subject-name="{{subject.name}}">
    <h3 class="font-weight-normal mt-5">{{subject.name}}</h3>

    <div class="absences-container ml-4 mt-4">
        <div class="font-weight-bold">Absente:</div>

        <ul class="absences-list-container">
            {{#each absences}}
            <li>
                <span {{#if itemIsExcused}} class="text-success" {{/if}}>{{itemDate}}</span>
                {{#unless itemIsExcused}}
                <button type="button" class="btn btn-link">Motiveza</button> |
                {{/unless}}
                <button class="btn btn-link">Sterge</button>
            </li>
            {{/each}}
        </ul>

        <div class="absences-create-container ml-4">
            <div class="form-inline">
                <input type="text" class="form-control form-control-sm mr-2" style="width:70px">

                <div class="form-check mb-2 mr-sm-2" style="width:90px">
                    <input class="form-check-input" type="checkbox" id="inlineFormCheck">
                    <label class="form-check-label" for="inlineFormCheck">
                        Motivata
                    </label>
                </div>

                <button class="btn btn-primary btn-sm">Adaga absenta</button>
            </div>
            <small class="text-muted">Ex: 17.04 / bifeaza daca e abs. motivata</small>
        </div>
    </div>

    <div class="marks-container ml-4 mt-4" data-test="aaa">
        <div class="font-weight-bold">Note:</div>

        <ul class="marks-list-container" data-test="bbb">
            {{#each marks}}
            <li id={{itemId}}>
                <span>{{itemValue}}</span>
                <span class="text-muted">/ {{itemDate}}</span>
                <button type="button" class="btn btn-link">Sterge</button>
            </li>
            {{/each}}
        </ul>

        <div class="marks-create-container ml-4">
            <div class="form-inline">
                <input type="number" class="form-control form-control-sm mark-value" style="width:50px">
                <span class="text-muted text-center" style="width:12px"> / </span>
                <input type="number" class="form-control form-control-sm mark-date" style="width:100px">
                <button class="btn btn-primary btn-sm ml-2 add-mark-btn">Adauga nota</button>
            </div>
            <small class="text-muted">Ex: 8 / 17.04</small>
        </div>
    </div>

    <div class="sem-test-paper-container  ml-4 mt-4">
        <div class="font-weight-bold">Teza:</div>
        <div class="ml-4 form-inline">
            <input type="number" class="form-control form-control-sm" style="width:50px">
            <button type="submit" class="btn btn-primary btn-sm ml-2" style="width:120px">Adauga teza</button>
        </div>
    </div>

    <div class="sem-average-container  ml-4 mt-4">
        <div class="font-weight-bold">Media:</div>
        <div class="ml-4 form-inline">
            <input type="number" class="form-control form-control-sm" style="width:50px">
            <button type="submit" class="btn btn-primary btn-sm ml-2" style="width:120px">Adauga media</button>
        </div>
    </div>

    <hr class="mt-5" />
</div>
{{/each}}

